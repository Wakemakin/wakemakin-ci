server {
	listen 80;
	server_name apt.jibely.com;
	access_log	/var/log/nginx/freight.log;
	access_log	/var/log/nginx/freight.error.log;

	location / {
		root /var/cache/freight;
		autoindex on;

		allow 166.78.157.234;
                allow 166.78.14.222;
		allow 127.0.0.1;
		deny all;
	}
}
